<launch>
  <arg name="controllers" default="joint_state_controller velocity_trajectory_controller"/>

  <include file="$(find mobilerobot_description)/launch/mobilerobot_upload.launch"/>

  <node name="dynamixel_hardware_node" pkg="dynamixel_hardware" type="dynamixel_hardware_node"
        required="true" output="screen" args="joint1
                                             joint2
                                             joint3
                                             joint4
                                             joint5
                                             joint6
                                             joint7">

    <rosparam command="load" file="$(find dynamixel_hardware)/config/dynamixel_configs.yaml"/>
  </node>


  <!-- Load controller settings -->
  <rosparam file="$(find dynamixel_hardware)/config/manipulator_controller.yaml" command="load"/>

  <!-- spawn controller manager -->
  <node name="ros_control_controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
    output="screen" args="$(arg controllers)" />

    <!-- Convert joint states to /tf tranforms -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>

</launch>
